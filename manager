<script>                                                                                                                                         
$(document).ready(function() {                                                                                                                   
   var data = {                                                                                                                                  
       url: $(#url).value(),                                                                                                                     
       theme: $(#theme).value(),                                                          
       trasnsition: $(#transition).value(),                                                                                                      
       size: $(size).value()  };                                                                                  
   var update = $ajax({                                                                                                                          
      type:"POST",                                                                                                                               
      url:"/manager/revealup",                                                                                                                   
      data: data,                                                                                                                            
   });                                                                                                                                       
                                                                                                                                                 
                                                                    
   update                                                                                                                                        
   .ajaxstart() // loading start                                                                                                             
   .ajaxsend() // server send                                                                                     
   .ajaxSuccess() // success handling                                                                                                            
   .ajaxError() // error handling                                                                                                                
   .ajaxStop() // loading finish                                                                                                                 
   .ajaxComplete() // finish                                                                            
   ;                                                                                                                                             
                                                                                                                                                 
});                                                                                                                                 
                                                                                                                                    
                                                                                                                                    
